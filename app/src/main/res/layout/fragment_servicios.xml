<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="35dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/text_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="53dp" />

            <Button
                android:id="@+id/limpieza_general"
                android:layout_width="197dp"
                android:layout_height="87dp"
                android:text="@string/st_limpieza_general" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="53dp" />

            <Button
                android:id="@+id/limpieza_cristales"
                android:layout_width="197dp"
                android:layout_height="87dp"
                android:text="@string/st_limpieza_cristales" />


            <Space
                android:layout_width="match_parent"
                android:layout_height="53dp" />

            <Button
                android:id="@+id/cocina"
                android:layout_width="197dp"
                android:layout_height="87dp"
                android:text="@string/st_cocina" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="53dp" />

            <Button
                android:id="@+id/lavanderia"
                android:layout_width="197dp"
                android:layout_height="87dp"
                android:text="@string/st_lavanderia" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="53dp" />

            <Button
                android:id="@+id/plancha"
                android:layout_width="197dp"
                android:layout_height="87dp"
                android:text="@string/st_plancha" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="53dp" />

            <Button
                android:id="@+id/regado_plantas"
                android:layout_width="197dp"
                android:layout_height="87dp"
                android:text="@string/regado_plantas" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="53dp" />

            <Button
                android:id="@+id/paseo_mascotas"
                android:layout_width="197dp"
                android:layout_height="87dp"
                android:text="@string/paseo_mascotas" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="53dp" />

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/cancelar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cancelar" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/contratar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contratar" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>

            </com.google.android.material.bottomnavigation.BottomNavigationView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>